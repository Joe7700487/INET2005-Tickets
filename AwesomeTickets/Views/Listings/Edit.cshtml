@model AwesomeTickets.Models.Listing

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Listing</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ListingId" />
            <div class="mb-3">
                <label asp-for="ListingTitle" class="control-label"></label>
                <input asp-for="ListingTitle" class="form-control" />
                <span asp-validation-for="ListingTitle" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ListingDescription" class="control-label"></label>
                <input asp-for="ListingDescription" class="form-control" />
                <span asp-validation-for="ListingDescription" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ListingCategory" class="control-label"></label>
                <input asp-for="ListingCategory" class="form-control" />
                <span asp-validation-for="ListingCategory" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ListingDate" class="control-label"></label>
                <input asp-for="ListingDate" class="form-control" />
                <span asp-validation-for="ListingDate" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ListingLocation" class="control-label"></label>
                <input asp-for="ListingLocation" class="form-control" />
                <span asp-validation-for="ListingLocation" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ListingOwner" class="control-label"></label>
                <input asp-for="ListingOwner" class="form-control" />
                <span asp-validation-for="ListingOwner" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
